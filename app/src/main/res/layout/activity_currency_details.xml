<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".currency_Details">



    <ImageView
        android:id="@+id/details_currency_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



    <TextView
        android:id="@+id/details_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/details_currency_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:text=""
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/details_tv_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/details_currency_icon"
        app:layout_constraintTop_toBottomOf="@id/details_tv_name"
        android:textSize="30sp"
        android:textAllCaps="true"
        android:text="" />

    <TextView
        android:id="@+id/details_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_currency_icon"
        android:textSize="20sp"
        android:text="" />

    <TextView
        android:id="@+id/details_market_cap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_tv_price"
        android:textSize="20sp"
        android:text=""/>

    <TextView
        android:id="@+id/details_high_24h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_market_cap"
        android:textSize="20sp"
        android:text=""/>

    <TextView
        android:id="@+id/details_price_change_24h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_currency_icon"
        android:textSize="20sp"
        android:text=""
        android:gravity="right"/>

    <TextView
        android:id="@+id/details_market_cap_change_percentage_24h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_price_change_24h"
        android:textSize="20sp"
        android:text=""
        android:gravity="right"/>

    <TextView
        android:id="@+id/details_low_24h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_market_cap_change_percentage_24h"
        android:textSize="20sp"
        android:text=""
        android:gravity="right"/>






</androidx.constraintlayout.widget.ConstraintLayout>
